@model ML.Repartidor
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Repartidores registrados</h2>
<hr />
<a class="btn btn-success" href="@Url.Action("Form","Repartidor")">Agregar repartidor</a>
<hr />
<div class="container table-responsive">
    @if (Model.Repartidores != null)
    {
        if (Model.Repartidores.Count > 0)
        {
            <table class="table table-dark table-hover text-center">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>Foto</th>
                        <th>Nombre</th>
                        <th>Telefono</th>
                        <th>Fecha de ingreso</th>
                        <th>Placa de unidad</th>
                        <th>Modelo</th>
                        <th>Marca</th>
                        <th>Año</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbod>
                    @foreach (ML.Repartidor repartidor in Model.Repartidores)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Form", "Repartidor", new {idRepartidor = repartidor.IdRepartidor})"><i class="fa-solid fa-user-pen"></i></a></td>
                            <td>
                                @if (repartidor.Fotografia == null)
                                {
                                    <img src="https://electronicssoftware.net/wp-content/uploads/user.png" width="50" height="50"/>
                                }
                            </td>
                            <td>@repartidor.Nombre @repartidor.ApellidoPaterno @repartidor.ApellidoMaterno</td>
                            <td>@repartidor.Telefono</td>
                            <td>@repartidor.FechaIngreso.ToShortDateString()</td>
                            <td>@repartidor.UnidadAsignada.NumeroPlaca</td>
                            <td>@repartidor.UnidadAsignada.Modelo</td>
                            <td>@repartidor.UnidadAsignada.Marca</td>
                            <td>@repartidor.UnidadAsignada.YearFabricacion</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "Repartidor", new {idRepartidor = repartidor.IdRepartidor})"><i class="fa-solid fa-user-xmark"></i></a></td>
                        </tr>
                    }
                </tbod>
            </table>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No tienes repartidores registrados
            </div>
        }
    }
</div>

