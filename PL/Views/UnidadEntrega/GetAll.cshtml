@model ML.UnidadEntrega
@{
    ViewBag.Title = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Unidades registradas</h2>
<hr />
<a class="btn btn-success" href="@Url.Action("Form","UnidadEntrega")">Agregar unidad</a>
<hr />
<div class="container">
    @if (Model.Unidades != null)
    {
        if (Model.Unidades.Count > 0)
        {
            <table class="table table-dark table-hover text-center">
                <thead>
                    <tr>
                        <th>Editar</th>
                        <th>Numero de placa</th>
                        <th>Modelo</th>
                        <th>Marca</th>
                        <th>Año de fabricación</th>
                        <th>Estatus</th>
                        <th>Eliminar</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(ML.UnidadEntrega unidad in Model.Unidades)
                    {
                        <tr>
                            <td><a class="btn btn-warning" href="@Url.Action("Form","UnidadEntrega", new {idUnidadEntrega = unidad.IdUnidad })"><i class="fa-solid fa-gear"></i></a></td>
                            <td>@unidad.NumeroPlaca</td>
                            <td>@unidad.Modelo</td>
                            <td>@unidad.Marca</td>
                            <td>@unidad.YearFabricacion</td>
                            <td>@unidad.Estatus.Estatus</td>
                            <td><a class="btn btn-danger" href="@Url.Action("Delete", "UnidadEntrega", new {idUnidadEntrega = unidad.IdUnidad})"><i class="fa-solid fa-circle-xmark"></i></a></td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning" role="alert">
                No tienes unidades de entrega registradas.
            </div>
        }
    }
</div>

